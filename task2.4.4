class Main {
    public static void main(String[] args) {
        int[] x = {1, 10, 5, 0, 11};
        int[] y = {0, 1, 10, 18, 6};
        double maxDistant = Double.MIN_VALUE;
        double distant = 0;
        int fistIndex = -1;
        int endIndex = -1;
        for (int i = 0; i < x.length - 1; i++) {
            for (int j = i + 1; j < x.length; j++) {
                distant = findDistant(x[i], y[i], x[j], y[j]);
                if(maxDistant < distant){
                    maxDistant = distant;
                    fistIndex = i;
                    endIndex = j;
                }
            }
        }
        System.out.printf("The longest distant is %f from point %d %d to point %d %d", maxDistant, x[fistIndex], y[fistIndex], x[endIndex], y[endIndex]);
    }

    private static double findDistant(int x1, int y1, int x2, int y2){
        int x = Math.abs(x1 - x2);
        int y = Math.abs(y1 - y2);
        double distant = Math.sqrt(x*x + y*y);
        return distant;
    }
}
