package by.epam.lesson6.task3.user;

import java.io.PrintWriter;
import java.util.Scanner;

public abstract class AbstractUsers {
    private String name;
    private String password;
    private boolean isAdmin;

    protected AbstractUsers(String name, String password, boolean isAdmin) {
        this.name = name;
        this.password = password;
        this.isAdmin = isAdmin;
    }

    protected AbstractUsers(String name, String password){
        this.name = name;
        this.password = password;
        this.isAdmin = false;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getPassword() {
        return password;
    }

    public void setPassword(String password) {
        this.password = password;
    }

    public boolean isAdmin() {
        return isAdmin;
    }

    public void setAdmin(boolean admin) {
        isAdmin = admin;
    }

    public abstract void showMenu(PrintWriter out, Scanner in);
}
