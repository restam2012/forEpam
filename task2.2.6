class Main {
    public static void main(String[] args) {
        int n = 8;
        int[][] mass = new int[n][n];
        for (int i = 0; i < n / 2; i++) {
            for (int j = i; j < n - i; j++) {
                mass[i][j] = 1;
            }
        }
        for (int i = n / 2; i < n; i++) {
            for (int j = n - i - 1; j < i + 1; j++) {
                mass[i][j] = 1;
            }
        }
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                System.out.print(mass[i][j] + " ");
            }
            System.out.println();
        }
    }
}
