class Main {
    public static void main(String[] args) {
        double x = 2.6;
        double y = 3;
        double z = 3.6;
        double t = 1.6;
        System.out.println(areaOfQuadrangle(x, y, z, t));
    }

    private static double areaOfQuadrangle(double a, double b, double c, double d){
        double p = (a + b + c + d) / 2;
        double area = Math.sqrt((p - a) * (p - b) * (p - c) * (p - d));
        return area;
    }
}
