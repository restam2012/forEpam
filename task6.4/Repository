package by.epam.lesson6.task3;

import java.io.Serializable;
import java.util.Objects;

public class Repository implements Serializable {
    private int weight;
    private int maxWeight;

    public Repository(){
        weight = 0;
        maxWeight = 0;
    }

    public Repository(int weight, int maxWeight) {
        this.weight = weight;
        this.maxWeight = maxWeight;
    }

    public int getWeight() {
        return weight;
    }

    synchronized public void setWeight(int weight) {
        this.weight = weight;
    }

    public int getMaxWeight() {
        return maxWeight;
    }

    public void setMaxWeight(int maxWeight) {
        this.maxWeight = maxWeight;
    }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (o == null || getClass() != o.getClass()) return false;
        Repository that = (Repository) o;
        return weight == that.weight && maxWeight == that.maxWeight;
    }

    @Override
    public int hashCode() {
        return Objects.hash(weight, maxWeight);
    }

    @Override
    public String toString() {
        return "Repository{" +
                "weight=" + weight +
                ", maxWeight=" + maxWeight +
                '}';
    }

}
