import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.GregorianCalendar;

public class Time {
    Calendar time = new GregorianCalendar();
    Time(int h, int m, int s){
        if(h < 0 || h >= 24){
            h = 0;
        }
        if(m < 0 || m > 59){
            m = 0;
        }
        if(s < 0 || s > 59){
            s = 0;
        }
        time.set(0, 0,0, h, m, s);
    }
    Time(){
        time.set(0, 0,0, 0, 0, 0);
    }

    public void setHour(int h){
        if(h < 0 || h >= 24){
            h = 0;
        }
        time.set(Calendar.HOUR_OF_DAY, h);
    }

    public void setMinute(int m){
        if(m < 0 || m > 59){
            m = 0;
        }
        time.set(Calendar.MINUTE, m);
    }

    public void setSeconds(int s){
        if(s < 0 || s > 59){
            s = 0;
        }
        time.set(Calendar.SECOND, s);
    }

    public void addTime(int h, int m, int s){
        time.add(Calendar.HOUR_OF_DAY, h);
        time.add(Calendar.MINUTE, m);
        time.add(Calendar.SECOND, s);
    }

    public void showTime(){
        DateFormat df = new SimpleDateFormat("HH:mm:ss");
        System.out.println(df.format(time.getTime()));
    }

}
