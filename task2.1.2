import java.sql.Array;
import java.util.Arrays;

class Main {
    public static void main(String[] args) {
        int[] mass = {1, 2, 3, 4, 5, 6};
        int k = 3;
        int count = 0;
        for (int i = 0; i < mass.length; i++) {
            if(mass[i] > k){
                mass[i] = k;
                count++;
            }
        }
        System.out.println(Arrays.toString(mass));
        System.out.println(count);
    }
}
